<recette four="3" titre="oxydation Bernard Rousset version 2.1">
	
	<step n="1" duree="2400" deldg="2" titre="montée a 600">
		ce step aura sa durée ajustée au temps nécessaire pour atteindre la temperature
		demandée, 600 degres , par rampe à 0.25 degres/s
		(noter l'absence de SV)
		<tem n="H" SVinc="0.25 d" SVma="600 d" rampe="montee" saut="3" />
		<tem n="C" SVinc="0.25 d" SVma="600 d" rampe="montee" saut="3" />
		<tem n="S" SVinc="0.25 d" SVma="600 d" rampe="montee" saut="3" />
	</step>
	<step n="2" duree="2400" deldg="10" titre="descente a 600">
		si necessaire
		<tem n="H" SV="600 d" SVmi="600 d" check="min" saut="3" />
		<tem n="C" SV="600 d" SVmi="600 d" check="min" saut="3" />
		<tem n="S" SV="600 d" SVmi="600 d" check="min" saut="3" />
	</step>
	<step n="3" duree="60" deldg="40" titre="verification 600 degres">
		<vanne n="N2|Ar" /> <vanne n="F. pur" />
		<mfc n="N2|Ar" SV="1.0 u" />
		<tem n="H" SV="600 d" check="minmax" saut="150" />
		<tem n="C" SV="600 d" check="minmax" saut="150" />
		<tem n="S" SV="600 d" check="minmax" saut="150" />
	</step>
	<step n="4" titre="attente à 600 degres">
		<vanne n="N2|Ar" /> <vanne n="F. pur" />
		<mfc n="N2|Ar" SV="1.0 u" />
		<tem n="H" SV="600 d" />
		<tem n="C" SV="600 d" />
		<tem n="S" SV="600 d" />
	</step>	
	<step n="5" deldg="0" titre="pret pour charger sous azote" saut="6">
		<vanne n="15" /> <vanne n="N2|Ar" /> <vanne n="F. pur" />
		<mfc n="N2|Ar" SV="3.0 u" />
	</step>
	<step n="6" duree="600" deldg="0" titre="stabilisation 600 degres">
		<vanne n="N2|Ar" /> <vanne n="F. pur" /> 
		<tem n="H" SV="600 d" />
		<tem n="C" SV="600 d" />
		<tem n="S" SV="600 d" />
	</step>
	<step n="7" duree="30" deldg="10" titre="verif 600 degres" >
		<tem n="H" SV="600 d" SVmi="590 d" SVma="610 d" check="minmax" saut="150" />
		<tem n="C" SV="600 d" SVmi="590 d" SVma="610 d" check="minmax" saut="150" />
		<tem n="S" SV="600 d" SVmi="590 d" SVma="610 d" check="minmax" saut="150" />
	</step>
	<step n="8" duree="2100" deldg="2" titre="montée a 870">
		<vanne n="N2|Ar" /> <vanne n="F. pur" /> 
		<tem n="H" SVinc="0.25 d" SVma="870 d" rampe="montee" saut="9" />
		<tem n="C" SVinc="0.25 d" SVma="870 d" rampe="montee" saut="9" />
		<tem n="S" SVinc="0.25 d" SVma="870 d" rampe="montee" saut="9" />
	</step>
	<step n="9" duree="270" deldg="0" titre="stabilisation 870 degres">
		<vanne n="N2|Ar" /> <vanne n="F. pur" />
		<tem n="H" SV="870 d" />
		<tem n="C" SV="870 d" />
		<tem n="S" SV="870 d" />
	</step>
	<step n="10" duree="30" deldg="10" titre="verif 870 degres" >
		<vanne n="N2|Ar" /> <vanne n="F. pur" />
		<tem n="H" SV="870 d" SVmi="860 d" SVma="980 d" check="minmax" saut="151" />
		<tem n="C" SV="870 d" SVmi="860 d" SVma="980 d" check="minmax" saut="151" />
		<tem n="S" SV="870 d" SVmi="860 d" SVma="980 d" check="minmax" saut="151" />
	</step>
	<step n="11" deldg="20" duree="420" titre="oxydation O2 7 mn" >
		<vanne n="O2" /> <vanne n="N2|Ar" /> <vanne n="F. pur" />
		<mfc n="N2|Ar" SV="3 u" />
		<mfc n="O2" SV="1 u" SVmi="0.8 u" check="min" saut="105" />
	</step>
	<step n="12" duree="1200" deldg="2" titre="montée a 1000">
		<vanne n="N2|Ar" /> <vanne n="F. pur" />
		<mfc n="N2|Ar" SV="3.0 u" />
		<tem n="H" SVinc="0.25 d" SVma="1000 d" rampe="montee" saut="13" />
		<tem n="C" SVinc="0.25 d" SVma="1000 d" rampe="montee" saut="13" />
		<tem n="S" SVinc="0.25 d" SVma="1000 d" rampe="montee" saut="13" />
	</step>
	<step n="13" duree="900" deldg="0" titre="palier à 1000 degres">
		<vanne n="N2|Ar" /> <vanne n="F. pur" />
		<tem n="H" SV="1000 d" />
		<tem n="C" SV="1000 d" />
		<tem n="S" SV="1000 d" />
	</step>

	<step n="14" duree="3600" deldg="10" titre="descente a 600">
		<vanne n="N2|Ar" /> <vanne n="F. pur" />
		<mfc n="N2|Ar" SV="3.0 u" />
		<tem n="H" SV="600 d" SVmi="600 d" check="min" saut="15" />
		<tem n="C" SV="600 d" SVmi="600 d" check="min" saut="15" />
		<tem n="S" SV="600 d" SVmi="600 d" check="min" saut="15" />
	</step>

	<step n="15" deldg="0" titre="dechargement (sonnerie)">
		<vanne n="N2|Ar" /> <vanne n="F. pur" />
		<vanne n="15" /> <vanne n="(FIN)" />
		<mfc n="N2|Ar" SV="3.0 u" />
	</step>
	<step n="16" deldg="0" duree="300" titre="dechargement (30mn d'azote)" saut="0" >
		<vanne n="N2|Ar" /> <vanne n="F. pur" />
		<vanne n="(FIN)" />
		<mfc n="N2|Ar" SV="3.0 u" />
	</step>

<!-- Les steps d'alarme -->
	
	<step n="103" deldg="0" titre="manque gaz N2" saut="4" >
		on est ici parceque peut etre le gaz manque
		<vanne n="N2|Ar" /> <vanne n="15" />
	</step>
	<step n="105" deldg="0" titre="manque gaz O2" saut="11" >
		on est ici parceque peut etre le gaz manque
		<vanne n="F. pur" /> <vanne n="15" />
	</step>
	<step n="150" deldg="0" titre="température incorrecte" saut="4" >
		vanne 15 reservée pour sonnerie
		<vanne n="15" />
	</step>
	<step n="151" deldg="0" titre="température incorrecte" saut="9" >
		vanne 15 reservée pour sonnerie
		<vanne n="15" />
	</step>
</recette>
