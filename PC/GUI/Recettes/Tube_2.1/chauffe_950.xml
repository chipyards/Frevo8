<recette four="3" titre="montée en température : 950 degres" >
	
	<step n="1" duree="65535" deldg="2" titre="montée a 950">
		ce step aura sa durée ajustée au temps nécessaire pour atteindre la temperature
		demandée, 950 degres , par rampe à 0.25 degres/s
		(noter l'absence de SV)
		<tem n="H" SVinc="0.25 d" SVma="950 d" rampe="montee" saut="2" />
		<tem n="C" SVinc="0.25 d" SVma="950 d" rampe="montee" saut="2" />
		<tem n="S" SVinc="0.25 d" SVma="950 d" rampe="montee" saut="2" />
	</step>
	<step n="2" duree="1800" deldg="10" titre="descente a 950 si necessaire" >
		<tem n="H" SV="950 d" SVmi="960 d" check="min" saut="3" />
		<tem n="C" SV="950 d" SVmi="960 d" check="min" saut="3" />
		<tem n="S" SV="950 d" SVmi="960 d" check="min" saut="3" />
	</step>
	<step n="3" duree="30" deldg="20" titre="verif temperature 950" saut="0" >
		ce step fixe définitivement la température
		<tem n="H" SV="950 d" check="minmax" saut="150" />
		<tem n="C" SV="950 d" check="minmax" saut="150" />
		<tem n="S" SV="950 d" check="minmax" saut="150" />
	</step>

<!-- Les steps d'alarme -->
	
	<step n="150" deldg="0" titre="température incorrecte" >
		vanne 15 reservée pour sonnerie
		<vanne n="15" />
	</step>

</recette>
