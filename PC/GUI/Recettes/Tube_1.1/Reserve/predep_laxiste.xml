<recette four="1" titre="dopage phosphore laxiste">
	
	<step n="1" duree="65535" deldg="2" titre="montée a 1050">
		ce step aura sa durée ajustée au temps nécessaire pour atteindre la temperature
		demandée, 1050 degres , par rampe à 0.25 degres/s
		(noter l'absence de SV)
		<tem n="H" SVinc="0.25 d" SVma="1050 d" rampe="montee" saut="2" />
		<tem n="C" SVinc="0.25 d" SVma="1050 d" rampe="montee" saut="2" />
		<tem n="S" SVinc="0.25 d" SVma="1050 d" rampe="montee" saut="2" />
	</step>
	<step n="2" duree="30" deldg="20" titre="verif temperature 1050">
		ce step sert pour le cas ou on serait parti d'une température supérieure
		<tem n="H" SV="1050 d" check="minmax" saut="150" />
		<tem n="C" SV="1050 d" check="minmax" saut="150" />
		<tem n="S" SV="1050 d" check="minmax" saut="150" />
	</step>
	
	
	
	
	<step n="3" deldg="0" titre="chargement sous azote">
		<vanne n="N2|Ar" /> <vanne n="F. pur" />
		<mfc n="N2|Ar" SV="1.5 u" />
	</step>
	<step n="4" deldg="20" duree="120" titre="oxydation préliminaire">
		<vanne n="N2|Ar" /> <vanne n="O2" /> <vanne n="F. pur" />
		<mfc n="O2" SV="0.1 u" check="minmax" saut="102" />
		<mfc n="N2|Ar" SV="2.0 u" check="minmax" saut="101" />
	</step>
	<step n="5" deldg="120" duree="180" titre="oxydation préliminaire + bullage vers évent">
		<vanne n="N2|Ar" /> <vanne n="O2" /> <vanne n="F. pur" /> <vanne n="Bubbler" />
		<mfc n="O2" SV="0.1 u" check="minmax" saut="102" />
		<mfc n="N2|Ar" SV="2.0 u" check="minmax" saut="101" />
		<mfc n="POCl3" SV="7.5 u" SVmi="1 u" SVma="40 u" check="minmax" saut="103" />
	</step>
	<step n="6" deldg="20" duree="300" titre="dopage POCl3">
		<vanne n="N2|Ar" /> <vanne n="O2" /> <vanne n="F. pur" />
		<vanne n="Bubbler" /> <vanne n="POCl3" />
		<mfc n="O2" SV="0.1 u" check="minmax" saut="102" />
		<mfc n="N2|Ar" SV="2.0 u" check="minmax" saut="101" />
		<mfc n="POCl3" SV="7.5 u" SVmi="1 u" SVma="40 u" check="minmax" saut="104" />
	</step>
	<step n="7" deldg="20" duree="300" titre="purge finale du tube avec O2 et N2">
		<vanne n="N2|Ar" /> <vanne n="O2" /> <vanne n="F. pur" />
		<mfc n="O2" SV="0.1 u" check="minmax" saut="102" />
		<mfc n="N2|Ar" SV="2.0 u" check="minmax" saut="101" />
		<mfc n="POCl3" SV="0 %" />
	</step>
	<step n="8" deldg="20" titre="dechargement">
		<vanne n="N2|Ar" /> <vanne n="F. pur" /> <vanne n="15" /> <vanne n="(FIN)" />
		<mfc n="O2" SV="0 u" />
		<mfc n="N2|Ar" SV="1.5 u" />
	</step>




	<step n="101" deldg="0" titre="manque gaz N2" saut="4" >
		on est ici parceque peut etre le gaz manque
		<vanne n="N2|Ar" /> <vanne n="F. pur" /> <vanne n="15" />
	</step>
	<step n="102" deldg="0" titre="manque gaz O2" saut="4" >
		on est ici parceque peut etre le gaz manque
		<vanne n="N2|Ar" /> <vanne n="O2" /> <vanne n="F. pur" /> <vanne n="15" />
	</step>
	<step n="103" deldg="0" titre="debit POCl3 incorrect" saut="4" >
							vanne 15 reservée pour sonnerie
		<vanne n="N2|Ar" /> <vanne n="O2" /> <vanne n="F. pur" /> <vanne n="15" />
	</step>
	<step n="104" deldg="0" titre="debit POCl3 incorrect" saut="6" >
		<vanne n="N2|Ar" /> <vanne n="O2" /> <vanne n="F. pur" /> <vanne n="15" />
		<vanne n="Bubbler" /> <vanne n="POCl3" />
	</step>
	<step n="150" deldg="0" titre="temperature incorrecte" saut="0" >
		<vanne n="15" />
	</step>





</recette>
